<%= form_for([@course, @section ]) do |form| %>
  <% if section.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
        <% section.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "Section number:", style: "display: block" %>
    <%= form.text_field :number %>
  </div>

  <div>
    <%= form.label "Mode:", style: "display: block" %>
    <%= form.number_field :mode %>
  </div>

  <div>
    <%= form.label "Status:", style: "display: block" %>
    <%= form.text_field :status %>
  </div>

  <div>
    <%= form.label "Graders still needed:", style: "display: block" %>
    <%= form.text_field :graders_needed %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
